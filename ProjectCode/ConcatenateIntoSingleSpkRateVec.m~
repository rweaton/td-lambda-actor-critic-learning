function ConcatenatedVec = ConcatenateIntoSingleSpkRateVec(BinWidth_sec)

    CodeDir = pwd;

    FileDir = uigetdir;
    
    Files = dir(FileDir);
    
    nFiles = length(Files);
    
    ConcatenatedVec = NaN*ones([];
    
    for i = 3:nFiles
        
        cd(FileDir);
        
        load(Files(i).name);
       
        cd(CodeDir);
        
        Mock_spkrate = ProcessIntoSpkRateVec(Record, BinWidth_sec);
        
        ConcatenatedVec = [ConcatenatedVec, Mock_spkrate];
        
    end

    cd ..
    cd('StimOnVsStimOffCode')

    SpkRatesPerPeriodStruct = CalculateSpkratesPerPeriod2(ConcatenatedVec', 10);

    cd ..
    cd('Project')
    
end